angular.module('jakubniewczas')
  .directive('codeSnipet', ['$timeout', function($timeout) {
    return {
      scope: {
        content: '='
      },
      templateUrl: '<%= ng_template_url("code-snipet/") %>',
      link: function(scope, element, attrs) {
        element.ready(function() {
          $timeout(function() {
            angular.forEach(element.find('pre'), function(codeSnipet) {
              window.hljs.highlightBlock(codeSnipet);
            });
          }, 1000);
        });
      }
    }
  }])